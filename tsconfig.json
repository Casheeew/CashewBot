{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["DOM"],
    "rootDir": "./src",
    "module": "CommonJS",  
    "outDir": "./dist",                              
    "esModuleInterop": true,                                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
